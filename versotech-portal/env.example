# VERSO Holdings Portal - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =========================
# Supabase Configuration
# =========================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =========================
# Application Configuration
# =========================
# Application URL (required for OAuth callbacks)
# Development:
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Production (update after deployment):
# NEXT_PUBLIC_APP_URL=https://your-production-domain.com
# NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# =========================
# Authentication & Security
# =========================
# Token for protecting cron endpoints (reservation expiry, etc.)
CRON_AUTH_TOKEN=your-secure-random-token-here

# =========================
# n8n Workflow Integration
# =========================
# Base URL for your n8n instance
N8N_BASE_URL=https://your-n8n-instance.com

# Webhook authentication for n8n callbacks
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# =========================
# E-Signature Integration
# =========================
# Choose one: Dropbox Sign OR DocuSign

# Dropbox Sign (recommended for speed)
DROPBOX_SIGN_API_KEY=your-dropbox-sign-api-key
DROPBOX_SIGN_CLIENT_ID=your-dropbox-sign-client-id

# DocuSign (enterprise features)
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id

# =========================
# Banking Integration
# =========================
# Bank API credentials (for automated transaction import)
BANK_API_ENDPOINT=https://api.your-bank.com
BANK_API_KEY=your-bank-api-key

# =========================
# Feature Flags
# =========================
FEATURE_DEAL_MANAGEMENT=true
FEATURE_INVENTORY_TRACKING=true
FEATURE_FEE_AUTOMATION=true
FEATURE_DOCUMENT_AUTOMATION=true

# =========================
# Compliance AI Assistant
# =========================
# Development: use local CLI subscription login
COMPLIANCE_AI_PROVIDER=local_codex
COMPLIANCE_AI_CODEX_COMMAND=codex
COMPLIANCE_AI_CLAUDE_COMMAND=claude

# Optional KYC expiry OCR provider override (otherwise uses COMPLIANCE_AI_PROVIDER)
# KYC_EXPIRY_AI_PROVIDER=local_codex
# KYC_EXPIRY_AI_OPENAI_MODEL=gpt-4.1-mini
# KYC_EXPIRY_AI_CODEX_COMMAND=codex
# KYC_EXPIRY_AI_CLAUDE_COMMAND=claude
# KYC_EXPIRY_AI_DOCUMENT_TYPES=passport,national_id,id_card,residence_permit,visa,driving_license,proof_of_address

# Production (switch provider + keys)
# COMPLIANCE_AI_PROVIDER=api_openai
# COMPLIANCE_AI_OPENAI_MODEL=gpt-4.1-mini
# OPENAI_API_KEY=your-openai-api-key
# KYC_EXPIRY_AI_PROVIDER=api_openai
# KYC_EXPIRY_AI_OPENAI_MODEL=gpt-4.1-mini
# KYC_EXPIRY_AI_DOCUMENT_TYPES=passport,national_id,id_card,residence_permit,visa,driving_license,proof_of_address
# COMPLIANCE_AI_PROVIDER=api_anthropic
# COMPLIANCE_AI_ANTHROPIC_MODEL=claude-sonnet-4-5
# ANTHROPIC_API_KEY=your-anthropic-api-key

# =========================
# Production Security
# =========================
NODE_ENV=production
FORCE_HTTPS=true
SESSION_TIMEOUT_MINUTES=480
